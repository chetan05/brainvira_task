<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="WhiteStatusBarNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
    </style>

    <style name="CategoryItemName" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:fontFamily">@font/helveticaneue_condensed_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>
    <style name="BaseActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="LargeLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="OnboardingEditText" parent="OnboardingEditTextFullWidth">
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="OnboardingEditTextFullWidth" parent="OnboardingControllFullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="OnboardingControllFullWidth">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="OnboardingEditText.Password" parent="OnboardingEditTextFullWidth">
        <item name="android:password">true</item>
    </style>

    <style name="RedProgressBarLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="RedProgressBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>